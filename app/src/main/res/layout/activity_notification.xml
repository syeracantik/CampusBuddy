<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Set Assignment Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etReminderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder Title"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#808080"/>

    <Button
        android:id="@+id/btnPickReminderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Date and Time"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFD700"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tvSelectedReminderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No date selected"
        android:textColor="#333"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnSetReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Reminder"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4B0082"
        android:textColor="#FFFFFF"/>

</LinearLayout>